{
  "name": "@jsonstore/server",
  "version": "0.1.0",
  "description": "MCP server for JSON Store - exposes tools for AI agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "jsonstore-server": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "mcp:inspect": "npx @modelcontextprotocol/inspector node dist/server.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "json",
    "database",
    "mcp",
    "server",
    "ai",
    "agent"
  ],
  "license": "MIT",
  "dependencies": {
    "@jsonstore/sdk": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
